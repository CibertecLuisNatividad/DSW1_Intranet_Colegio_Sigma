        <li class="breadcrumb-item"><a href="index.html">Inicio</a></li>
        <li class="breadcrumb-item active">Mi Horario</li>
    </ol>
    <!-- end breadcrumb -->
    <!-- begin page-header -->
    <h1 class="page-header">Mi Horario Escolar <small> </small></h1>
    <!-- end page-header -->
    <!-- begin panel -->
    <div class="panel panel-success">
        <!-- begin panel-heading -->
        <div class="panel-heading">
            <h4 class="panel-title f-s-15 text-center">CICLO ACADÉMICO 2021-1  FECHA: 20/05/2021</h4>
            <div class="panel-heading-btn">
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-redo"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>
            </div>
        </div>
        <!-- end panel-heading -->
        <!-- begin panel-body -->
        <div class="panel-body">
            <table id="data-table-default" class="table table-striped table-bordered ">
                <thead>
                    <tr>
                        <th class="all text-white bg-gradient-blue" width="15%">Hora</th>
                        <th class="all text-white bg-gradient-blue" width="17%">Lunes</th>
                        <th class="all text-white bg-gradient-blue" width="17%">Martes</th>
                        <th class="all text-white bg-gradient-blue" width="17%">Miercoles</th>
                        <th class="all text-white bg-gradient-blue" width="17%">Jueves</th>
                        <th class="all text-white bg-gradient-blue" width="17%">Viernes</th>
                    </tr>
                </thead>
                <tbody>
                    <tr height="100px" class="text-center">
                        <td width="15%" class="f-s-20 f-w-700 text-white bg-gradient-blue">
                            07:00 - 09:00 am
                        </td>
                        @foreach (var lista in horario)
                        {

                            if (lista.horaInicio == 7 && lista.horaFin == 9)
                            {

                                <td class="text-white bg-gradient-aqua  f-s-15 f-w-400">
                                    Curso: @lista.Curso.nombreCurso <br />
                                    Seccion: @lista.Seccion.nombreSeccion  <br />
                                   Horario: @lista.horaInicio:00 - @lista.horaFin:00
                                </td>
                            }

                        }

                    </tr>
                    <tr height="100px" class="text-center">
                        <td width="15%" class="f-s-20 f-w-700 text-center text-white bg-gradient-blue">09:00 - 11:00 am</td>
